---
import { Dropdown as DropdownContainer, DropdownItems } from "astro-navbar";
const { title, lastItem, children } = Astro.props;
import style from "./menu.module.css"
---

<li class="relative">
  <DropdownContainer class={style['dropdown-button-container']}>
    <button
      class={style['dropdown-button']}>
      <span>{title}</span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="3"
        stroke="currentColor"
        class="w-3 h-3 mt-0.5 group-open:rotate-180">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
      </svg>
    </button>
    <DropdownItems class="position-relative">
      <div
        class:list={[
          style["dropdown-container"],
          lastItem
            ? style["dropdown-container-right"]
            : style["dropdown-container-left"],
        ]}>
        <div
          class={style['dropdown-flex']}>
          {
            children.map((item: any) => (
              <a
                href={item.path}
                class={style['menu-entry']}>
                {item.title}
              </a>
            ))
          }
        </div>
      </div>
    </DropdownItems>
  </DropdownContainer>
</li>

<style is:global>
  .open > button > svg {
    transform: rotate(180deg);
    transition-duration: 0.3s;
  }

  .position-relative {
    position: relative;
    height: 100%;
  }
</style>