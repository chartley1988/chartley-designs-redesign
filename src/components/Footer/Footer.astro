---
import { Image } from "astro:assets";
import FooterList from "./FooterList.astro";

interface Props {
	siteName: string;
	showSiteName?: boolean;
	logo?: string | undefined;
}

const { siteName, logo, showSiteName = true } = Astro.props;

const group1 = {
	heading: "Services",
	items: [
		{
			text: "Service 1",
			url: "/",
		},
		{
			text: "Service 2",
			url: "/",
		},
		{
			text: "Service 3",
			url: "/",
		},
	],
};

const group2 = {
	heading: "Navigation",
	items: [
		{
			text: "Home",
			url: "/",
		},
		{
			text: "About Us",
			url: "/",
		},
		{
			text: "Contact Us",
			url: "/",
		},
	],
};

const socials = {
	heading: "Social Media",
	items: [
		{
			text: "Formerly Twitter",
			url: "/",
			badge: "twitter-x",
		},
		{
			text: "Instagram",
			url: "/",
			badge: "ri:instagram-fill",
		},
		{
			text: "Facebook",
			url: "/",
			badge: "simple-icons:facebook",
		},
	],
};
---

<footer class='footer'>
	<div class='flex-responsive container'>
		<div class='logo'>
			<Image
				src='/favicon.svg'
				width='100'
				height='100'
				alt='Company Logo'
			/>
			{showSiteName && <div>{siteName}</div>}
		</div>

		<div class='grid'>
			<FooterList data={group1} />

			<FooterList data={group2} />

			<FooterList data={socials} />

		</div>
	</div>
	<div class='bottom-text'>Designed by Chartley</div>
</footer>

<style>
	/* Change background of footer here */
	.footer {
		background-color: var(--ui-element-bg);
		padding: 0.75rem;
		padding-top: var(--spacing-md);
	}

	.flex-responsive {
		display: flex;
		flex-direction: column;
		gap: var(--spacing-lg);
	}

	.grid {
		flex: 1;
		display: grid;
		gap: 2rem 1rem;
		
		grid-template-columns: 1fr;
		grid-template-rows: auto auto;
		grid-auto-flow: row;
	}

	.logo {
		display: flex;
		flex-direction: column;
		align-items: start;

	}

	.bottom-text {
		display: flex;
		flex-direction: row;
		justify-content: center;
		margin-top: 1.5rem;
		margin-bottom: 0.75rem;
	}

	@media only screen and (min-width: 768px) {
		.grid {
			grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		}

		.flex-responsive {
			flex-direction: row;
			gap: var(--spacing-lg);
		}
	}

	@media (min-width: 1024px) {
		.grid {

		}

		.logo {
			grid-column: 1/2;
		}

		.bottom-text {
			grid-row: -1;
			justify-self: center;
		}
	}
</style>
