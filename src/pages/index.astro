---
import Layout from "../layouts/Layout.astro";
import HeroPhotoAndText from "../components/Hero/HeroPhotoAndText.astro";
import ContactForm from "../components/ContactForm.astro";
import ProgrammingLanguages from "../components/ProgrammingLanguages.astro";
import ProjectCards from "../components/Services/ProjectCards.astro";
import RecentPosts from "../components/RecentPosts.astro";
---

<Layout title="Home Page">
  <!-- Hero Section -->
  <HeroPhotoAndText />

  <section>
    <h2 class="container">Things I made...</h2>
    <ProjectCards />
  </section>

  <section class="container">
    <h2>...using these things:</h2>
    <ProgrammingLanguages coloredIcons={true} />
  </section>

  <section class="container">
    <h2>Recent Posts</h2>
    <RecentPosts />
  </section>

  <section class="container">
    <h2>Get in touch!</h2>
    <ContactForm />
  </section>
</Layout>

<style>
  .content {
    margin-top: 2rem;
    margin-bottom: 2rem;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  section {
    margin-top: 3rem;
  }
</style>
